@model ControleCelulasWebMvc.Models.Area

@{
    ViewData["Title"] = "Novo Cadastro";
}

<h1>Novo Cadastro</h1>

<h4>Áreas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<ControleCelulasWebMvc.Models.Enums.StatusCadastro>()" class="form-control">
                    <option>Selecione...</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoordenadorId" class="control-label"></label>
                <select asp-for="CoordenadorId" class ="form-control" asp-items="ViewBag.CoordenadorId">
                    <option>Selecione...</option>
                </select>
                <span asp-validation-for="CoordenadorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a type="button" class="btn btn-warning" asp-action="Index">Voltar para a lista</a>
                <button type="button" data-toggle="modal" data-target="#exampleModal" class="btn btn-primary">Salvar</button>
            </div>
            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Atenção</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Confirma o cadastro?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                            <button type="submit" value="Create" class="btn btn-primary">Confirmar</button>
                        </div>
                    </div>
                </div>
            </div>           
        </form>
    </div>
</div>