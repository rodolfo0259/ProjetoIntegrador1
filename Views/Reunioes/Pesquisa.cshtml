@model IEnumerable<ControleCelulasWebMvc.Models.Reuniao>

@{
    ViewData["Title"] = "Resultado da Pesquisa";
}

<br />
<div class="card">
    <div class="card-header">
        Participantes da reuni√£o: @Model.Count()
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table id="exportTable" class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr class="success">
                        <th>
                            @Html.DisplayNameFor(model => model.DataHoraReuniao)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pessoa)
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataHoraReuniao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pessoa.Nome)
                            </td>
                        </tr>

                    }
                </tbody>
            </table>
        </div>
        <div class="col-lg-12 text-right">
            <a type="button" class="btn btn-primary" asp-action="Relatorios">Voltar para os filtros</a>
        </div>
    </div>
</div>